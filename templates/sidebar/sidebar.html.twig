{{ form_start(form, {'attr': {'id': 'task_form'}}) }}
<div class="container-fluid">
    {#  Search  #}
    <div class="row">
        <div class="col-12">
            {{ form_row(form.search) }}
            <div id="search_reset"><span class="ti-close"></span></div>
        </div>
    </div>

    {#  Type  #}
    <div class="row">
        <div class="col-12">
            <div class="category">
                <span>Type</span>
            </div>
        </div>
        <div class="col-12">
            <a href="{{ path('SearchAnime',get) }}"><button type="button" ><span>Anime</span></button></a>
        </div>
